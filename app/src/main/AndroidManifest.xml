<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.craftylyteam.craftylyapp1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CraftylyApp1">
        <activity
            android:name=".survey.SurveyActivity"
            android:exported="false" />
        <activity
            android:name=".intro.IntroActivity"
            android:exported="true" />
        <activity android:name=".main.notes.EditNoteActivity" />
        <activity
            android:name=".main.prompt.settings.SettingsActivity"
            android:theme="@style/PreferenceScreen" />
        <activity
            android:name=".splash.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.AuthActivity" />
        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTop" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>