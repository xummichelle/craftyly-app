<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="30dp"
    android:weightSum="100"
    android:gravity="center">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/prompt_card_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="30dp"

                    app:cardBackgroundColor="@color/med_purple"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    >


                    <TextView
                        android:id="@+id/text_view_prompt_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/bolded_normal_heading_raisin_black_text"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        />

                    <FrameLayout
                        android:id="@+id/left_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/overlay_red">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_reject_circle"
                            android:layout_gravity="center"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/right_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/overlay_green">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic__check_circle"
                            android:layout_gravity="center"
                            />

                    </FrameLayout>



                </androidx.cardview.widget.CardView>



            </FrameLayout>

</LinearLayout>